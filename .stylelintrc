{
  "extends": "stylelint-config-htmlacademy",
  "plugins": ["stylelint-order", "stylelint-rational-order-plugin"],
  "rules": {
    "order/properties-order": [],
    "plugin/rational-order": [
      true,
      {
        "border-in-box-model": false,
        "empty-line-between-groups": false
      }
    ]
  }
}
